<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BundleResponseActivity">

    <TextView
        android:id="@+id/tv_hello_bundle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello Wisnu!"
        android:fontFamily="@font/roboto_bold"
        android:textSize="40sp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle_bundle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text='You login with "abc" password'
        android:textSize="18sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_bundle"
        app:layout_constraintStart_toStartOf="@id/tv_hello_bundle" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="cards.json"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_bundle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>